<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:summary="Google Accounts"
        android:title="@string/google_accounts_title" >

        <ListPreference
            android:defaultValue="None"
            android:key="account_selection"
            android:summary="Select Google Account"
            android:title="@string/account_title" />

        <Preference
            android:key="add_account"
            android:summary="Add a Google Account"
            android:title="@string/add_account_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:summary="General Settings"
        android:title="@string/general_settings_title" >

        <CheckBoxPreference
            android:key="autoMarkAsRead"
            android:summary="On/Off"
            android:title="Automatically Mark as Read" />

        <CheckBoxPreference
            android:key="nightMode"
            android:summary="On/Off"
            android:title="Night Mode" />

        <CheckBoxPreference
            android:key="vibrateMode"
            android:summary="On/Off"
            android:title="Vibration Feedback" />

        <ListPreference
            android:entries="@array/fontSizeOptions"
            android:entryValues="@array/fontSizeValues"
            android:key="fontSize"
            android:summary="Select a Font Size"
            android:title="@string/font_size_title" />
    </PreferenceCategory>

</PreferenceScreen>